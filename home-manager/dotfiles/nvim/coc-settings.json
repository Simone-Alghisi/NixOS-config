{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "c",
    "cpp",
    "h",
    "ruby"
  ],

  // python config
  "pyright.enable": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ]
}
